{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://website.com/order.schema.json",
    "title": "Order",
    "description": "Order shipment product.",
    "type": "object",
    "properties": {
        "productId": {
            "type": "integer",
            "minimum": 1000},
        "name": {
            "type": "string"},
        "addr": {
            "type": "string"},
        "zip": {
            "type": "string",
            "pattern": "[0-9]{5}-[0-9]{4}"}
    },
    "additionalProperties": false,
    "required": [
        "productId",
        "name",
        "addr",
        "zip"
    ]
    }